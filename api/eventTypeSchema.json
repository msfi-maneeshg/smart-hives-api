{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type" : "object",
    "title" : "HiveEvenSchema",
    "description" : "JSON Schema that defines the structure of the farmer Thing Type.",
    "properties" : {
        "temperature" : {
            "description" : "Temperature in degrees celsius",
            "type" : "number",
            "minimum" : 0,
            "maximum" : 100,
            "default" : 0.0
        },
        "humidity" : {
            "description" : "Humidity in percentage",
            "type" : "number",
            "minimum" : 0,
            "maximum" : 100,
            "default" : 0.0
        },
		"weight" : {
            "description" : "weight in Kg",
            "type" : "number",
            "minimum" : 0,
            "maximum" : 1000,
            "default" : 0.0
        }
    },
    "required" : [
        "temperature",
        "humidity",
		"weight"
    ]
}